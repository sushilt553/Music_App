<h1>Create a New Track</h1>

<form action="<%= tracks_url %>" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

    <label for="name">Name:</label>
    <input type="text" name="track[name]" id="name">
    <br>
    <label for="ord">Track Number:</label>
    <input type="number" id="ord" name="track[ord]">
    <br>
    <label for="album">Album</label>
    <select name="track[album_id]" id="album">
    <% Album.all.each do |album| %>
        <option 
            value="<%= album.id %>"
            <%= album.id == @album.id ? "selected" : "" %>
        ><%= album.name %></option>
    <% end %>
    </select>
    <br>
    <label for="regular">Regular:</label>
    <input type="radio" id="regular" value="false" name="track[bonus]">

    <label for="bonus">Bonus:</label>
    <input type="radio" id="bonus" value="true" name="track[bonus]">
    <br>
    <label for="lyrics">Lyrics:</label>
    <textarea name="track[lyrics]" id="lyrics" ></textarea>
    <br>
    <input type="submit" value="Create track">
</form>